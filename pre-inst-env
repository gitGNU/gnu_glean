#GUILE_LOAD_COMPILED_PATH="/home/alex/projects/guix${GUILE_LOAD_COMPILED_PATH:+:}$GUILE_LOAD_COMPILED_PATH"
GUILE_LOAD_PATH="/home/alex/projects/guilecraft:/home/alex/projects/guilecraft${GUILE_LOAD_PATH:+:}:$GUILE_LOAD_PATH"
