(define (predicate-q question) 
  (string-append "What is the predicate for " question))

(define problem1 
  (problem "What is the predicate for the empty list?" "null?" 'list-predicates))
(define problem2
  (problem "What is the predicate for numbers?" "number?" 'number-predicates))
(define problem3
  (problem (predicate-q "strings?") "string?" 'string-predicates))
(define problem4
  (problem (predicate-q "boolean?") "boolean?" 'boolean-predicates))


;;; Problems below stands in for a dynamically generated
;;; list of problems, parsed from the xml module files.

(define problems 
  (list problem1 problem2 problem3 problem4))

